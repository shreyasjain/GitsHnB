<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d1234e"
    android:orientation="vertical"
    tools:context=".AddNewBusStudent">


    <ScrollView
        android:id="@+id/sroll1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/add_student_Bus_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/style_edittext"
                android:hint="Name"
                android:padding="10dp" />


            <EditText
                android:id="@+id/add_student_Bus_Rollno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/style_edittext"
                android:hint="Roll No."
                android:inputType="textCapCharacters"
                android:padding="10dp" />

            <EditText
                android:id="@+id/add_student_Bus_Branch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/style_edittext"
                android:hint="Branch (BBB)"
                android:inputType="textCapCharacters"
                android:padding="10dp" />

            <EditText
                android:id="@+id/add_student_Bus_Year"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/style_edittext"
                android:hint="Year (1/2/3/4)"
                android:inputType="number"
                android:padding="10dp" />


            <EditText
                android:id="@+id/add_student_Bus_Gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/style_edittext"
                android:hint="Gender (M/F)"
                android:inputType="textCapCharacters"
                android:padding="10dp" />


            <EditText
                android:id="@+id/add_student_Bus_FathersName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/style_edittext"
                android:hint="Fathers Name"
                android:padding="10dp" />

            <EditText
                android:id="@+id/add_student_Bus_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/style_edittext"
                android:hint="email Id"
                android:inputType="textWebEmailAddress"
                android:padding="10dp" />


            <EditText
                android:id="@+id/add_student_Bus_Address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/style_edittext"
                android:hint="Address"
                android:inputType="textLongMessage"
                android:padding="10dp" />


            <EditText
                android:id="@+id/add_student_Bus_Password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/style_edittext"
                android:hint="password"
                android:padding="10dp" />




            <EditText
                android:id="@+id/add_student_Bus_Contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/style_edittext"
                android:hint="Contact No."
                android:inputType="number"
                android:padding="10dp" />

            <Button
                android:id="@+id/butnSignBusStudent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:onClick="studentBusSignUp"
                android:padding="20dp"
                android:background="@drawable/style_button"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:text="Sign Up" />

        </LinearLayout>


    </ScrollView>


</RelativeLayout>