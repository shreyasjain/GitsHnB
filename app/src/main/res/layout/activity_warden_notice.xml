<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d1234e"
    android:orientation="vertical"
    tools:context=".WardenNotice">


    <ScrollView
        android:id="@+id/sroll1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NOTICE"
                android:padding="20dp"
                android:textStyle="bold|italic"
                android:layout_gravity="center"
                android:textSize="40dp"
                android:background="#FFFFBB33"/>

            <EditText
                android:id="@+id/wardenNoticeEdittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:inputType="textLongMessage"
                android:background="@drawable/style_edittext"
                android:hint="write your complaint here..."
                android:padding="30dp" />

            <Button
                android:id="@+id/butnWardenNoticeSubmit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:onClick="noticeSubmit"
                android:padding="40dp"
                android:text="submit" />

        </LinearLayout>


    </ScrollView>


</RelativeLayout>