<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d1234e"
    android:orientation="vertical"
    tools:context=".AddNewBusFaculty">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/add_faculty_Bus_firstname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/style_edittext"
            android:hint="First Name"
            android:inputType="textPersonName"
            android:padding="10dp" />

        <EditText
            android:inputType="textPersonName"
            android:id="@+id/add_faculty_Bus_lastname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/style_edittext"
            android:hint="Last Name"
            android:padding="10dp" />

        <EditText

            android:id="@+id/add_faculty_Bus_Contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/style_edittext"
            android:hint="Contact No."
            android:inputType="number"
            android:padding="10dp" />


        <EditText
            android:id="@+id/add_faculty_Bus_Gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/style_edittext"
            android:hint="Gender (M/F)"
            android:inputType="textCapCharacters"
            android:padding="10dp" />

        <EditText
            android:id="@+id/add_faculty_Bus_Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/style_edittext"
            android:inputType="textPassword"
            android:hint="Password"
            android:padding="10dp" />


        <Button
            android:background="@drawable/style_button"
            android:id="@+id/butnSignBusF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:onClick="facultySignUp"
            android:padding="20dp"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:text="Sign Up" />

    </LinearLayout>

</RelativeLayout>