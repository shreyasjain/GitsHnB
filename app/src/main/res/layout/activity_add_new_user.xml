<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Add_new_user">

    <TextView
        android:id="@+id/textCat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="25dp"
        android:text="User Category"
        android:textAllCaps="true"
        android:textSize="40sp"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/Butn_add_student"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textCat"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="20dp"
        android:onClick="newFacultyMethod"
        android:padding="30dp"
        android:text="Add new Faculty" />

    <Button
        android:id="@+id/Butn_Bus_Facilities"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Butn_add_student"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="20dp"
        android:onClick="newStudentMethod"
        android:padding="30dp"
        android:text="Add new Student" />

    <Button
        android:id="@+id/Student_Complaints_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Butn_Bus_Facilities"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="20dp"
        android:onClick="StudentComplaints"
        android:padding="30dp"
        android:text="Student complaints" />




</RelativeLayout>